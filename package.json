{
  "name": "copilot-cli",
  "version": "1.0.0",
  "description": "GitHub Copilot CLI tool with an OpenAI-compatible API proxy",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "copilot": "./bin/copilot.js",
    "copilot-cli": "./bin/copilot.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "smoke:external": "tsx src/dev/smoke-external.ts",
    "link": "npm link",
    "unlink": "npm unlink",
    "postinstall": "npm run build"
  },
  "keywords": [
    "github",
    "copilot",
    "openai",
    "proxy",
    "api",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.2.0",
    "express": "^4.18.2",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.5",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
